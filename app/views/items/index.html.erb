<h1>View <%= pluralize(@items.count, "Item") %></h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">Item Name</th>
			<th scope="col">Price</th>
			<th scope="col">Quantity</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item|%>
		<tr>
			<td><%= item.name%></td>
			<td><%= item.price%></td>
			<td><%= item.quantity%></td>
			<td><a href="/items/<%= item.id %>">Show</a>
				<a href="/items/<%= item.id %>/edit">Edit</a>
				<a href="/items/<%= item.id %>" data-method = "delete"
					data-confirm="Are you sure?">Delete</a>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<a href="/items/new">Create Items</a>

<h1>View List's <%= pluralize(@items.count, "Item") %></h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Price</th>
			<th scope="col">Quantity</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item.name %></td>
			<td><%= item.price %></td>
			<td><%= item.quantity %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<a href="/lists">View Lists</a>
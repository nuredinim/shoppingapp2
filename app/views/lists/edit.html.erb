<h1>Edit <%= @list.name %> </h1>
<form action="/lists/<%= @list.id %> " method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<div class="form-group">
		<label>Name:</label>
		<input type="text" name="list[name]" value="<%= @list.name %>" class="form-control">
	</div>
	<div class="form-group">
		<label>Store:</label>
		<input type="text" name="list[store]" value="<%= @list.store %>" class="form-control">
	</div>
	<div class="form-group">
		<label>Date:</label>
		<input type="text" name="list[date]" value="<%= @list.date %>" class="form-control">
	</div>
	<input type="submit" name="Update">
</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<p><%= e %></p>
	<% end %>
<% end %>
<h1>Create List</h1>
<form action="/lists" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<div class="form-group">
		<label>Name:</label>
		<input type="text" name="list[name]" class="form-control">
	</div>
	<div class="form-group">
		<label>Store:</label>
		<input type="text" name="list[store]" class="form-control">
	</div>
	<div class="form-group">
		<label>Date:</label>
		<input type="text" name="list[date]" class="form-control">
	</div>
	<input type="submit" name="Create" class="btn btn-primary">
</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div class="alert alert-dark" role="alert"><%= e %></div>
	<% end %>
<% end %>